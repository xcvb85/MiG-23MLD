<?xml version="1.0" encoding="UTF-8"?>
<PropertyList>
    <name>configuration</name>
    <modal type="bool">false</modal>
    <draggable>true</draggable>
    <resizable>true</resizable>
    <width>725</width>
    <layout>vbox</layout>
    
    <group>
        <layout>hbox</layout>
        <empty>
            <stretch>1</stretch>
        </empty>
        
        <text>
            <label>MiG-23 Configuration</label>
        </text>
        
        <empty>
            <stretch>1</stretch>
        </empty>
        
        <button>
            <pref-width>16</pref-width>
            <pref-height>16</pref-height>
            <legend></legend>
            
            <default>1</default>
            <keynum>27</keynum>
            <border>2</border>
            <binding>
                <command>dialog-close</command>
            </binding>
            <binding>
                <command>dialog-apply</command>
            </binding>
        </button>
    </group>
    
    <hrule/>
    
    <group>
        <layout>hbox</layout>
        
        <button>
            <legend>Repair damage</legend>
        </button>
        
        <vrule/>
        
        <button>
            <legend>Rearm cannons</legend>
            <binding>
                <command>nasal</command>
                <script>pylons.refill_cannons();</script>
            </binding>
        </button>
        
        <vrule/>
        
        <button>
            <legend>Refill chaff/flares</legend>
            <binding>
                <command>nasal</command>
                <script>pylons.refill_cf();</script>
            </binding>
        </button>
        
        <vrule/>
        
        <button>
            <legend>Repack chute</legend>
            <binding>
                <command>nasal</command>
                <script>pylons.refill_chute();</script>
            </binding>
        </button>
    </group>
    
    <hrule/>
    
    <group>
        <layout>table</layout>
        
        <button>
            <pref-width>225</pref-width><pref-height>23</pref-height>
            <row>0</row>
            <col>0</col>
            <legend>Empty</legend>
            <binding>
                <command>nasal</command>
                <script>pylons.empty();</script>
            </binding>
        </button>
        
        <button>
            <pref-width>225</pref-width><pref-height>23</pref-height>
            <row>0</row>
            <col>2</col>
            <legend>A/A Default</legend>
            <binding>
                <command>nasal</command>
                <script>pylons.aa_default();</script>
            </binding>
        </button>
        
        <button>
            <pref-width>225</pref-width><pref-height>23</pref-height>
            <row>0</row>
            <col>4</col>
            <legend>A/A Short Range</legend>
            <binding>
                <command>nasal</command>
                <script>pylons.aa_r3();</script>
            </binding>
        </button>
        
        <hrule>
            <row>1</row>
            <col>0</col>
            <colspan>6</colspan>
        </hrule>
        
        <button>
            <pref-width>225</pref-width><pref-height>23</pref-height>
            <row>2</row>
            <col>0</col>
            <legend>A/G Rockets Light</legend>
            <binding>
                <command>nasal</command>
                <script>pylons.ag_s5();</script>
            </binding>
        </button>
        
        <button>
            <pref-width>225</pref-width><pref-height>23</pref-height>
            <row>2</row>
            <col>2</col>
            <legend>A/G Rockets Heavy</legend>
            <binding>
                <command>nasal</command>
                <script>pylons.ag_s24();</script>
            </binding>
        </button>
        
        <button>
            <pref-width>225</pref-width><pref-height>23</pref-height>
            <row>2</row>
            <col>4</col>
            <legend>A/G Missile Remote</legend>
            <binding>
                <command>nasal</command>
                <script>pylons.ag_kh23();</script>
            </binding>
        </button>


        <button>
            <pref-width>225</pref-width><pref-height>23</pref-height>
            <row>3</row>
            <col>0</col>
            <legend>A/G Bombs</legend>
            <binding>
                <command>nasal</command>
                <script>pylons.ag_f500();</script>
            </binding>
        </button>

        <button>
            <pref-width>225</pref-width><pref-height>23</pref-height>
            <row>3</row>
            <col>2</col>
            <legend>A/G Cluster Bombs</legend>
            <binding>
                <command>nasal</command>
                <script>pylons.ag_r500();</script>
            </binding>
        </button>
        
        <button>
            <pref-width>225</pref-width><pref-height>23</pref-height>
            <row>3</row>
            <col>4</col>
            <legend>A/G Guns</legend>
            <binding>
                <command>nasal</command>
                <script>pylons.ag_upk23();</script>
            </binding>
        </button>
    </group>
    
    <group>
        <layout>hbox</layout>
        <empty>
            <stretch>1</stretch>
        </empty>
        
        <checkbox>
            <label>MP Damage</label>
            <halign>left</halign>
            <property>payload/armament/msg</property>
            <live>true</live>
            <binding>
                <command>nasal</command>
                <script>
                    if(getprop("fdm/jsbsim/gear/unit[0]/WOW")) {
                    setprop("payload/armament/msg", !getprop("payload/armament/msg"));
                    }
                </script>
            </binding>
        </checkbox>
        
        <empty>
            <stretch>1</stretch>
        </empty>
        
        <checkbox>
            <label>CFD</label>
            <property>fdm/jsbsim/fcs/cfd</property>
            <live>true</live>
            <binding>
                <command>property-toggle</command>
                <property>fdm/jsbsim/fcs/cfd</property>
            </binding>
        </checkbox>
        
        <empty>
            <stretch>1</stretch>
        </empty>
        
        <checkbox>
            <label>Vortex Generator</label>
            <property>fdm/jsbsim/fcs/vortex-generator</property>
            <live>true</live>
            <binding>
                <command>property-toggle</command>
                <property>fdm/jsbsim/fcs/vortex-generator</property>
            </binding>
        </checkbox>
        
        <empty>
            <stretch>1</stretch>
        </empty>
        
        <checkbox>
            <label>Dogtooth</label>
            <property>fdm/jsbsim/fcs/dogtooth</property>
            <live>true</live>
            <binding>
                <command>property-toggle</command>
                <property>fdm/jsbsim/fcs/dogtooth</property>
            </binding>
        </checkbox>
        
        <empty>
            <stretch>1</stretch>
        </empty>
    </group>
    
    <empty><stretch>1</stretch></empty>
</PropertyList>

