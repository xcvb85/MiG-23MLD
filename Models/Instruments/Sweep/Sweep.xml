<?xml version="1.0" encoding="UTF-8"?>
<PropertyList>
  <path>sweep.ac</path>
  <effect>
    <inherits-from>Effects/model-transparent</inherits-from>
    <object-name>glass</object-name>
  </effect>
 <effect>
     <inherits-from>Aircraft/MiG-23MLD/Models/Effects/instruments/instruments</inherits-from>
     <object-name>face</object-name>
     <object-name>needle</object-name>
     <object-name>needleLeft</object-name>
     <object-name>needleRight</object-name>
     <object-name>indicatorM</object-name>
     <object-name>indicatorV</object-name>
 </effect>

 <animation>
  <type>textranslate</type>
  <object-name>indicatorM</object-name>
  <property>fdm/jsbsim/fcs/wing-sweep-indicator</property>
  <factor>0.167</factor>
  <axis>
   <x>0</x>
   <y>1</y>
  </axis>
 </animation>

 <animation>
  <type>textranslate</type>
  <object-name>indicatorV</object-name>
  <property>fdm/jsbsim/fcs/wing-sweep-indicator</property>
  <factor>0.167</factor>
  <axis>
   <x>0</x>
   <y>1</y>
  </axis>
 </animation>

    <animation>
        <type>rotate</type>
        <object-name>needleLeft</object-name>
        <property>fdm/jsbsim/fcs/wing-sweep</property>
        <factor>97</factor>
	<offset-deg>0</offset-deg>
        <center>
            <x-m> 0.000</x-m>
            <y-m>-0.007</y-m>
            <z-m>-0.001</z-m>
        </center>
        <axis>
            <x>1</x>
            <y>0</y>
            <z>0</z>
        </axis>
    </animation>

    <animation>
        <type>rotate</type>
        <object-name>needleRight</object-name>
        <property>fdm/jsbsim/fcs/wing-sweep</property>
        <factor>97</factor>
	<offset-deg>0</offset-deg>
        <center>
            <x-m> 0.000</x-m>
            <y-m> 0.003</y-m>
            <z-m>-0.001</z-m>
        </center>
        <axis>
            <x>-1</x>
            <y>0</y>
            <z>0</z>
        </axis>
    </animation>

</PropertyList>
