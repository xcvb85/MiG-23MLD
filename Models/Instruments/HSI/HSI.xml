<?xml version="1.0" encoding="UTF-8"?>
<!-- Instrument from MiG-21, textures from MiG-23 model -->
<PropertyList>
  <path>hsi.ac</path>
  <effect>
    <inherits-from>Effects/model-transparent</inherits-from>
    <object-name>glass</object-name>
  </effect>
  <effect>
    <inherits-from>Aircraft/MiG-23MLD/Models/Effects/instruments/instruments</inherits-from>
    <object-name>HIazimuth</object-name>
    <object-name>Compass</object-name>
    <object-name>Center</object-name>
    <object-name>Localizer</object-name>
    <object-name>Glideslope</object-name>
    <object-name>LocalizerFlag</object-name>
    <object-name>GlideslopeFlag</object-name>
    <object-name>Back</object-name>
  </effect>
  
  <animation>
    <type>rotate</type>
    <object-name>Compass</object-name>
    <property>orientation/heading-magnetic-deg</property>
    <axis>
      <x>1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>
  
  <animation>
    <type>rotate</type>
    <object-name>Localizer</object-name>
    <property>instrumentation/nav/heading-needle-deflection</property>
    <interpolation>
      <entry><ind> 4</ind><dep> 30</dep></entry> 
      <entry><ind> 0</ind><dep>  0</dep></entry>
      <entry><ind>-4</ind><dep>-30</dep></entry>
    </interpolation>
    <center>
      <x-m>-0.03</x-m>
      <y-m> 0.00</y-m>
      <z-m> 0.00</z-m>
    </center>
    <axis>
      <x>0</x>
      <y>0</y>
      <z>1</z>
    </axis>
  </animation>
  
  <animation>
    <type>rotate</type>
    <object-name>Glideslope</object-name>
    <property>instrumentation/nav/gs-needle-deflection</property>
    <interpolation>
      <entry><ind>-4</ind><dep> 30</dep></entry>
      <entry><ind> 0</ind><dep>  0</dep></entry>
      <entry><ind> 4</ind><dep>-30</dep></entry>
    </interpolation>
    <center>
      <x-m>-0.03</x-m>
      <y-m> 0.00</y-m>
      <z-m> 0.00</z-m>
    </center>
    <axis>
      <x>0</x>
      <y>1</y>
      <z>0</z>
    </axis>
  </animation>
  
  <animation>
    <type>select</type>
    <object-name>LocalizerFlag</object-name>
    <condition>
      <not>
        <property>instrumentation/nav/in-range</property>
      </not>
    </condition>
  </animation>
  
  <animation>
    <type>select</type>
    <object-name>GlideslopeFlag</object-name>
    <condition>
      <not>
        <property>instrumentation/nav/has-gs</property>
      </not>
    </condition>
  </animation>
  
  <animation>
    <type>rotate</type>
    <object-name>Course</object-name>
    <expression>
      <difference>
		<property>instrumentation/nav[0]/radials/selected-deg</property>
        <property>orientation/heading-magnetic-deg</property>
      </difference>
    </expression>
    <axis>
      <x>-1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>RadioCompass</object-name>
    <expression>
      <difference>
        <property>instrumentation/nav[0]/heading-deg</property>
        <property>orientation/heading-magnetic-deg</property>
      </difference>
    </expression>
    <axis>
      <x>-1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>BearingNeedle</object-name>
    <expression>
      <difference>
        <property>autopilot/settings/heading-bug-deg</property>
        <property>orientation/heading-magnetic-deg</property>
      </difference>
    </expression>
    <axis>
      <x>-1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>

	<animation>
		<type>knob</type>
		<object-name>Knob</object-name>
		<property>instrumentation/nav[0]/radials/selected-deg</property>
		<factor>10</factor>
		<offset-deg>0</offset-deg>
		<interval-sec>0.075</interval-sec>
		<center>
			<x-m> 0.00</x-m>
			<y-m> 0.04</y-m>
			<z-m>-0.04</z-m>
		</center>
		<axis>
			<x>-1</x>
			<y>0</y>
			<z>0</z>
		</axis>
		<increase>
			<binding>
				<command>property-adjust</command>
				<property>instrumentation/nav[0]/radials/selected-deg</property>
				<step>1</step>
				<min>0</min>
				<max>360</max>
				<wrap>true</wrap>
			</binding>
		</increase>
		<decrease>
			<binding>
				<command>property-adjust</command>
				<property>instrumentation/nav[0]/radials/selected-deg</property>
				<step>-1</step>
				<min>0</min>
				<max>360</max>
				<wrap>true</wrap>
			</binding>
		</decrease>
		<hovered>
			<binding>
				<command>set-tooltip</command>
				<tooltip-id>crs</tooltip-id>
				<label>Course</label>
			</binding>
		</hovered>
	</animation>
</PropertyList>
