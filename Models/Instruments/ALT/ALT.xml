<?xml version="1.0" encoding="UTF-8"?>
<PropertyList>
    <path>ALT.ac</path>
    <effect>
        <inherits-from>Effects/model-transparent</inherits-from>
        <object-name>glass</object-name>
    </effect>
    <effect>
        <inherits-from>Aircraft/MiG-23MLD/Models/Effects/instruments/lm1</inherits-from>
        <object-name>face</object-name>
    </effect>
    <effect>
        <inherits-from>Aircraft/MiG-23MLD/Models/Effects/instruments/lm2</inherits-from>
        <object-name>altimeterNeedle100</object-name>
        <object-name>altimeterNeedle1k</object-name>
        <object-name>pressureGuage</object-name>
    </effect>

    <animation>
        <type>rotate</type>
        <object-name>altimeterNeedle100</object-name>
        <property>instrumentation/altimeter/indicated-altitude-ft</property>
        <factor>-0.1097279</factor>
        <center>
            <x-m>0</x-m>
            <y-m>0</y-m>
            <z-m>0</z-m>
        </center>
        <axis>
            <x>1</x>
            <y>0</y>
            <z>0</z>
        </axis>
    </animation>  

    <animation>
        <type>rotate</type>
        <object-name>altimeterNeedle1k</object-name>
        <property>instrumentation/altimeter/indicated-altitude-ft</property>
        <factor>-0.00350199</factor>
        <center>
            <x-m>0</x-m>
            <y-m>0</y-m>
            <z-m>0</z-m>
        </center>
        <axis>
            <x>1</x>
            <y>0</y>
            <z>0</z>
        </axis>
    </animation>

    <animation>
        <type>rotate</type>
        <object-name>pressureGuage</object-name>
        <property>instrumentation/altimeter/setting-hpa</property>
        <interpolation>
            <entry>
                <ind> 940.0</ind>
                <dep>   0.0</dep>
            </entry>
            <entry>
                <ind>1050.0</ind>
                <dep>-330.0</dep>
            </entry>
        </interpolation>
        <center>
            <x-m>0</x-m>
            <y-m>0</y-m>
            <z-m>0</z-m>
        </center>
        <axis>
            <x>1</x>
            <y>0</y>
            <z>0</z>
        </axis>
    </animation>

    <animation>
        <type>rotate</type>
        <object-name>altimeterKnob</object-name>
        <property>instrumentation/altimeter/setting-hpa</property>
        <interpolation>
            <entry>
                <ind> 940.0</ind>
                <dep>   0.0</dep>
            </entry>
            <entry>
                <ind>1050.0</ind>
                <dep>-330.0</dep>
            </entry>
        </interpolation>
        <center>
            <x-m> 0.000</x-m>
            <y-m> 0.029</y-m>
            <z-m>-0.029</z-m>
        </center>
        <axis>
            <x>1</x>
            <y>0</y>
            <z>0</z>
        </axis>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>altimeterKnob</object-name>
        <action>
            <button>0</button>
            <repeatable>true</repeatable>
            <interval-sec>0.05</interval-sec>
            <binding>
                <command>property-adjust</command>
                <property>instrumentation/altimeter/setting-hpa</property>
                <step>0.25</step>
                <min>940</min>
                <max>1051</max>
                <wrap>true</wrap>
            </binding>
        </action>
        <action>
            <button>1</button>
            <repeatable>true</repeatable>
            <interval-sec>0.05</interval-sec>
            <binding>
                <command>property-adjust</command>
                <property>instrumentation/altimeter/setting-hpa</property>
                <step>-0.25</step>
                <min>940</min>
                <max>1051</max>
                <wrap>true</wrap>
            </binding>
        </action>
        <action>
            <button>3</button>
            <repeatable>true</repeatable>
            <interval-sec>0.1</interval-sec>
            <binding>
                <command>property-adjust</command>
                <property>instrumentation/altimeter/setting-hpa</property>
                <step>1.0</step>
                <min>940</min>
                <max>1051</max>
                <wrap>true</wrap>
            </binding>
        </action>
        <action>
            <button>4</button>
            <repeatable>true</repeatable>
            <interval-sec>0.1</interval-sec>
            <binding>
                <command>property-adjust</command>
                <property>instrumentation/altimeter/setting-hpa</property>
                <step>-1.0</step>
                <min>940</min>
                <max>1051</max>
                <wrap>true</wrap>
            </binding>
        </action>
    </animation>
</PropertyList>
