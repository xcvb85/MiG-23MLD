<?xml version="1.0" encoding="UTF-8"?>
<PropertyList>
    <path>switch1.ac</path>
    <animation>
        <type>pick</type>
        <object-name>lever</object-name>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>masterarm-bug</tooltip-id>
                <label>Master Arm %s</label>
                <property>controls/armament/master-arm-switch</property>
                <mapping>nasal</mapping>
                <script>
                    var modes = ['OFF', 'ON'];
                    return modes[arg[0]];
                </script>
            </binding>
        </hovered>
        <visible>true</visible>
        <action>
            <button>0</button>
            <repeatable>false</repeatable>
            <binding>
                <command>property-toggle</command>
                <property>controls/armament/master-arm-switch</property>
            </binding>
        </action>
    </animation>
    <animation>
        <type>rotate</type>
        <object-name>lever</object-name>
        <property>controls/armament/master-arm-switch</property>
        <interpolation>
            <entry><ind>0.0</ind><dep>-25</dep></entry>
            <entry><ind>1.0</ind><dep>25</dep></entry>
        </interpolation>
        <axis>
            <x>0.0</x>
            <y>-1.0</y>
            <z>0.0</z>
        </axis>
    </animation>
</PropertyList>
